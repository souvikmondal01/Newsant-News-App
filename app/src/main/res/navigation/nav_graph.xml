<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.souvikmondal01.neutral.ui.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_webViewFragment"
            app:destination="@id/webViewFragment" />
    </fragment>
    <fragment
        android:id="@+id/scrollFragment"
        android:name="com.souvikmondal01.neutral.ui.fragments.ScrollFragment"
        android:label="fragment_scroll"
        tools:layout="@layout/fragment_scroll" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.souvikmondal01.neutral.ui.fragments.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_searchFragment_to_webViewFragment"
            app:destination="@id/webViewFragment" />
    </fragment>
    <fragment
        android:id="@+id/favouriteFragment"
        android:name="com.souvikmondal01.neutral.ui.fragments.FavouriteFragment"
        android:label="fragment_favourite"
        tools:layout="@layout/fragment_favourite">
        <action
            android:id="@+id/action_favouriteFragment_to_webViewFragment"
            app:destination="@id/webViewFragment" />
    </fragment>
    <fragment
        android:id="@+id/webViewFragment"
        android:name="com.souvikmondal01.neutral.ui.fragments.WebViewFragment"
        android:label="fragment_article"
        tools:layout="@layout/fragment_web_view" />
    <fragment
        android:id="@+id/categoryFragment"
        android:name="com.souvikmondal01.neutral.ui.fragments.CategoryFragment"
        android:label="fragment_category"
        tools:layout="@layout/fragment_category">
        <action
            android:id="@+id/action_categoryFragment_to_webViewFragment"
            app:destination="@id/webViewFragment" />
    </fragment>
</navigation>